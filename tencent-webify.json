{
  "version": "2.0",
  "name": "event-checkin-system",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "installCommand": "npm install --registry=https://registry.npmmirror.com",
  "env": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "NEXT_PUBLIC_SUPABASE_URL",
      "description": "Supabase项目URL",
      "required": true
    },
    {
      "key": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
      "description": "Supabase匿名密钥",
      "required": true
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}